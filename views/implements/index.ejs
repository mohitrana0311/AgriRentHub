<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Implements</h1>

    <% for (let implement of implements){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(implement.images.length) {%>
                <img class="img-fluid" alt="" src="<%=implement.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/AgriRentHub/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= implement.title %> </h5>

                    <p class="card-text"><%= implement.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= implement.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/implements/<%=implement._id%>">View <%=implement.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const implements = { features: <%- JSON.stringify(implements) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
